//
// This file defines macros used for macro-metaprogramming with compiler-known
// language features.
//
//===----------------------------------------------------------------------===//

#ifndef STABLE_LANGUAGE_FEATURE
#  define STABLE_LANGUAGE_FEATURE(Name)
#endif

#ifndef UNSTABLE_LANGUAGE_FEATURE
#  define UNSTABLE_LANGUAGE_FEATURE(Name)
#endif

STABLE_LANGUAGE_FEATURE(neverType)
UNSTABLE_LANGUAGE_FEATURE(conditionalConformance)
UNSTABLE_LANGUAGE_FEATURE(propertyBehaviors)
UNSTABLE_LANGUAGE_FEATURE(experimentalPatterns)

#undef STABLE_LANGUAGE_FEATURE
#undef UNSTABLE_LANGUAGE_FEATURE
